<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SpinnerDivideStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#DCDCDC</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="SpinnerTheme" parent="AppTheme">
        <item name="android:dropDownListViewStyle">@style/SpinnerDivideStyle</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>